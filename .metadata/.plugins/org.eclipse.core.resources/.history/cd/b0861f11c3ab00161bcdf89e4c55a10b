	@Override
	public String getName() {
		return "Mount Olympus";
	}

	@Override
	public boolean hasWon() {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public void initialize() {
		initializeModel(getSeed());
		initializeView();
		initializeControllers();
		
		
	}

	private void initializeView() {
		CardImages ci = getCardImages();
		int w = ci.getWidth();
		int h = ci.getHeight();
		int delta = ci.getOverlap();
		
		
		// the MultiDeck view and elts
		deckView = new DeckView(deck);
		deckView.setBounds(20, 20, w, h);
		container.addWidget(deckView);
		// ----------------------------
		
		// Score and NumOfCardsLeft views
		scoreView = new IntegerView(getScore());
		scoreView.setFontSize(16);
		scoreView.setBounds(20, 40+h, w, h/2);
		container.addWidget(scoreView);
		
		numLeftView = new IntegerView(getNumLeft());
		numLeftView.setFontSize(16);
		numLeftView.setBounds(20, 100 + (3/2 * h), w, h/2);
		container.addWidget(numLeftView);
		// -------------------------------------
		
		for(int i=0; i < 10; i++){
			columnViews[i] = new ColumnView(columns[i]);
			columnViews[i].setBounds((20*(i+1)) + (i*w) , 100+(3*h), w, h+12*delta);
			container.addWidget(columnViews[i]);
		}
		
		// ----- 9 Columns / Tableau ----------
		/*
		columnView1 = new ColumnView(column1);
		columnView1.setBounds(20, 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView1);
		
		columnView2 = new ColumnView(column2);
		columnView2.setBounds(40+w, 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView2);
		
		columnView3 = new ColumnView(column3);
		columnView3.setBounds(60+(2*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView3);
		
		columnView4 = new ColumnView(column4);
		columnView4.setBounds(80+(3*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView4);
		
		columnView5 = new ColumnView(column5);
		columnView5.setBounds(100+(4*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView5);
		
		columnView6 = new ColumnView(column6);
		columnView6.setBounds(120+(5*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView6);
		
		columnView7 = new ColumnView(column7);
		columnView7.setBounds(140+(6*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView7);
		
		columnView8 = new ColumnView(column8);
		columnView8.setBounds(160+(7*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView8);
		
		columnView9 = new ColumnView(column9);
		columnView9.setBounds(180+(8*w), 100+(3*h), w, h + 12*delta);
		container.addWidget(columnView9);
		*/
		// ------------------------------------
		
		// Possibly change to for loop and array
	}

	private void initializeControllers() {
		
	}

	private void initializeModel(int seed) {
		deck = new MultiDeck("d",2);
		deck.create(seed);
		model.addElement(deck);
		
		for(int i = 0; i < 10; i++){
			columns[i] = new Column("col" + (i+1));
			model.addElement(columns[i]);
		}
		
		
		// ----- the columns ----------- 
		/*
		column1 = new Column("col1");
		model.addElement(column1);
		
		column2 = new Column("col2");
		model.addElement(column2);
		
		column3 = new Column("col3");
		model.addElement(column3);
		
		column4 = new Column("col4");
		model.addElement(column4);
		
		column5 = new Column("col5");
		model.addElement(column5);
		
		column6 = new Column("col6");
		model.addElement(column6);

		column7 = new Column("col7");
		model.addElement(column7);

		column8 = new Column("col8");
		model.addElement(column8);
		
		column9 = new Column("col9");
		model.addElement(column9);
		*/
		// -----------------------------
	}
	
	public static void main (String [] args){
		GameWindow gw = Main.generateWindow(new MountOlympus(), Deck.OrderBySuit);
	}

}
