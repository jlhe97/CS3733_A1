package jherreroestrada;

import ks.common.games.Solitaire;
import ks.common.model.*;

public class TableauToFoundationMove extends Move{

	Pile dest;
	Card cardDragged;

	
	public TableauToFoundationMove(Card cardDragged, Pile dest) {
		this.cardDragged = cardDragged;
		this.dest = dest;
	}
	
	@Override
	public boolean doMove(Solitaire game) {
		if (!valid(game)) { 
			return false; 
			}
		
		
		game.updateScore(+1);
		return true;
	}

	@Override
	public boolean undo(Solitaire game) {
		dest.add(cardDragged);
		game.updateScore(-1);
		return true;
	}

	@Override
	public boolean valid(Solitaire game) {
		return true; // change this later
	}

}
